#include <iostream>

using namespace std;

//komponen
struct Mahasiswa{
 string nama, fakultas, jurusan;
 Mahasiswa *next;

};

int main (){

   Mahasiswa *node1, *node2, *node3;

    node1 = new Mahasiswa();
    node2 = new Mahasiswa();
    node3 = new Mahasiswa();
    
    node1->nama 	= "Rosalia";
    node1->fakultas = "Teknik";
    node1->jurusan 	= "Informatika";
    node1->next = node2;

    node2->nama 	= "Diva";
    node2->fakultas = "Teknik";
    node2->jurusan 	= "Arsitektur";
    node2->next = node3;

    node3->nama 	= "Aminah";
    node3->fakultas = "Teknik";
    node3->jurusan 	= "Sipil";
    node3->next = NULL;

    Mahasiswa *cur;
    cur = node1;
    while( cur != NULL ) {
        cout << "Nama Mahasiswa     :" << cur->nama << endl;
        cout << "Fakultas Mahasiswa :" << cur->fakultas << endl;
        cout << "Jurusan Mahasiswa  :" << cur->jurusan << endl;
        cout << "\n" << endl;  // sebagai pemisah antara data mahasiswa

        cur = cur->next;

    }


}
